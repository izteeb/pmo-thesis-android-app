<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad2"
    tools:context="com.example.izteeb.PMO.search_med">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/arrow_back"
        android:id="@+id/back_bttn1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/back_bttn1"
        android:layout_toEndOf="@id/back_bttn1"
        android:text="Search Medication."/>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/back_bttn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"

            android:id="@+id/search_username_text_layout"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_username_text"
                style="@style/Base.V7.Widget.AppCompat.EditText"
                android:fontFamily="monospace"
                android:hint="Username"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textColorHint="@color/white"
                android:gravity="left"
                android:textSize="15sp"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:textSize="15sp"
            android:background="@drawable/custom_button"
            android:id="@+id/search_username_med"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/search_username_text_layout"

            />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/search_username_med"
            android:id="@+id/lv_search_med">

        </ListView>

</RelativeLayout>

