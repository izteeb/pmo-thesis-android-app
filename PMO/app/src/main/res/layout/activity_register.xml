<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad2"
    tools:context="com.example.izteeb.PMO.register">

    <Button
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/arrow_back"
        android:textColor="@color/slate"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account."
        android:paddingTop="7dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView121"
        android:textSize="15dp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_alignTop="@+id/backButton"
        android:layout_toEndOf="@+id/backButton" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView121"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">


            <RelativeLayout
                android:id="@+id/rl51"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/g1"
                android:layout_toEndOf="@+id/g1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et51"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:hint="First Name"
                        android:paddingRight="180dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet52"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet51"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et52"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:hint="Last Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet53"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet52"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et53"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:hint="Username"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet54"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet53"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:hint="Email Address"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15dp"

                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet54"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et56"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:fontFamily="monospace"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet56"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet55"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et57"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:fontFamily="monospace"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etet57"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet56"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et54"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:fontFamily="monospace"
                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:textColor="@color/white"
                        android:textColorHint="@color/warm_gray"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/tv51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet57"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:text="Gender"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etet57"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tv51"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Male"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Female"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RadioGroup>

                <RelativeLayout
                    android:id="@+id/rl52"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radioSex">

                    <Button
                        android:id="@+id/b52"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/calendar_icon1" />

                    <TextView
                        android:id="@+id/tv53"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/b52"
                        android:fontFamily="monospace"
                        android:text="BIRTHDATE"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/et55"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_alignBaseline="@id/tv53"
                        android:layout_toRightOf="@id/tv53"
                        android:inputType="date"
                        android:hint="DD"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <EditText
                        android:id="@+id/et58"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBaseline="@id/tv53"
                        android:layout_toRightOf="@id/et55"
                        android:inputType="date"
                        android:hint="MM"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <EditText
                        android:id="@+id/et59"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBaseline="@id/tv53"
                        android:layout_toRightOf="@id/et58"
                        android:inputType="date"
                        android:hint="YYYY"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/g1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/g2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="REGISTER"
            android:id="@+id/proceed_bttn"
            android:textColor="@color/white"
            android:onClick="invokeLogin"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_button"
            android:layout_margin="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:layout_weight="0"
            />
    </LinearLayout>




</RelativeLayout>
