<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad2"
    tools:context="com.example.izteeb.PMO.edit_user_for_admin_account">
    <Button
        android:id="@+id/backButton1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/arrow_back"
        android:textColor="@color/slate"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit user's information."
        android:paddingTop="7dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView1211"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_alignTop="@+id/backButton1"
        android:layout_toEndOf="@+id/backButton1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView1211"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">


            <RelativeLayout
                android:id="@+id/rl511"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/g11"
                android:layout_toEndOf="@+id/g11"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/rl41"
                    android:background="@drawable/button_no_background_white_border">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/user2_til"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/user2_tie"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:hint="Username"
                            android:paddingRight="180dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_below="@id/user2_til"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_button5"
                        android:text="Search"
                        android:id="@+id/arrow_up"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl41"
                    android:id="@+id/rl42"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_no_background_white_border">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etet511"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et511"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:hint="First Name"
                            android:paddingRight="180dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etet521"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet511"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et521"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:hint="Last Name"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etet541"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet521"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/email12"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:hint="Email Address"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15dp"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etet551"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet541"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        app:passwordToggleEnabled="true"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et561"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="15"
                            android:fontFamily="monospace"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etet561"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet551"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        app:passwordToggleEnabled="true"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et571"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="15"
                            android:fontFamily="monospace"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/etet571"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet561"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:textColorHint="@color/white">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et541"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="15"
                            android:fontFamily="monospace"
                            android:hint="Address"
                            android:inputType="textMultiLine"
                            android:textColor="@color/white"
                            android:textColorHint="@color/warm_gray"
                            android:textSize="15dp" />
                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:id="@+id/tv511"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet571"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="monospace"
                        android:text="Gender"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                    <RadioGroup
                        android:id="@+id/radioSex1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etet571"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/tv511"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMale1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Male"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/radioFemale1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Female"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                    </RadioGroup>

                    <RelativeLayout
                        android:id="@+id/rl521"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/radioSex1">

                        <Button
                            android:id="@+id/b521"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/date_picker" />

                        <TextView
                            android:id="@+id/tv531"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@id/b521"
                            android:fontFamily="monospace"
                            android:text="BIRTHDATE"
                            android:textColor="@color/white"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/et551"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/tv531"
                            android:hint="DD"
                            android:inputType="date"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <EditText
                            android:id="@+id/et581"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/et551"
                            android:hint="MM"
                            android:inputType="date"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <EditText
                            android:id="@+id/et591"
                            style="@style/Base.V7.Widget.AppCompat.EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/et581"
                            android:hint="YYYY"
                            android:inputType="date"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/g11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/g21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



            </RelativeLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="save"
            android:id="@+id/proceed_bttn1"
            android:textColor="@color/white"
            android:onClick="invokeLogin"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:layout_weight="0"
            />
    </LinearLayout>
</RelativeLayout>
