<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad2"
    tools:context="com.example.izteeb.PMO.login_page">

    <Button
        android:id="@+id/cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/arrow_back"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:textColor="@color/slate"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Login"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:paddingTop="6dp"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/cancel"
        android:layout_alignTop="@+id/cancel"
        android:layout_alignBottom="@+id/cancel"
        />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/relativeLayout2"
    android:layout_below="@+id/cancel"
    android:layout_marginTop="90dp"
    >


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etUsername"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            style="@style/Base.V7.Widget.AppCompat.EditText"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:hint="Username"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/warm_gray"

            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_below="@id/etUsername"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textColorHint="@color/warm_gray"
            style="@style/Base.V7.Widget.AppCompat.EditText"
            android:fontFamily="monospace"
            />

    </android.support.design.widget.TextInputLayout>
</RelativeLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button5"
            android:fontFamily="monospace"
            android:padding="15dp"
            android:text="SIGN IN"
            android:onClick="login"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


</RelativeLayout>


