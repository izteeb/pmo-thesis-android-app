<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad2"
    tools:context="com.example.izteeb.PMO.delete_user">


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/arrow_back"
        android:id="@+id/back_bttn4"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:layout_marginLeft="10dp"
        android:text="Delete user."
        android:layout_alignBaseline="@id/back_bttn4"
        android:layout_toRightOf="@id/back_bttn4"
        />




            <android.support.design.widget.TextInputLayout
                android:layout_below="@id/back_bttn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/delete_username_text_layout3"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_username_text3"
                    style="@style/Base.V7.Widget.AppCompat.EditText"
                    android:fontFamily="monospace"
                    android:hint="Username"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:textColorHint="@color/white"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#FFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/delete_username_text_layout3"
                android:id="@+id/delete_account_text_layout"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_account_text"
                    style="@style/Base.V7.Widget.AppCompat.EditText"
                    android:fontFamily="monospace"
                    android:hint="Account (User or Admin)"
                    android:singleLine="true"
                    android:textColor="#FFF"
                    android:textColorHint="@color/white"
                    android:inputType="number"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH USERNAME"
                android:id="@+id/search_on_delete_user"
                android:layout_below="@+id/delete_account_text_layout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_button"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_user_account"
                android:text="SEARCH AS ACCOUNT"
                android:layout_toRightOf="@id/search_on_delete_user"
                android:layout_below="@+id/delete_account_text_layout"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/custom_button3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_user"
                android:text="delete username"
                android:layout_below="@+id/search_on_delete_user"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/custom_button2"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_user_account"
                android:text="delete accounts"
                android:layout_below="@+id/search_on_delete_user"
                android:layout_toRightOf="@id/delete_user"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:background="@drawable/custom_button4"
                />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_user_delete"
            android:layout_below="@id/delete_user_account"
            >
        </ListView>




</RelativeLayout>
